{
  "name": "jekyll-static-site-builder",
  "version": "1.0.0",
  "author": "David Malone",
  "license": "MIT",
  "description": "An opinionated pipeline for creating brochure style static websites",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "build:jekyll": "jekyll build",
    "build:webpack": "webpack --mode production",
    "build:purgecss": "purgecss --config purgecss.config.js",
    "build:optimize-images": "node optimize-images.js",
    "build": "npm run build:webpack && npm run build:jekyll && npm run build:purgecss && npm run build:optimize-images",
    "serve:jekyll": "jekyll serve",
    "serve:webpack": "webpack --watch",
    "serve": "concurrently \"npm run serve:jekyll\" \"npm run serve:webpack\""
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.2.1",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^9.1.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss-loader": "^8.1.1",
    "sass": "1.77.6",
    "sass-loader": "^16.0.3",
    "sharp": "^0.33.5",
    "style-loader": "^4.0.0",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  }
}
